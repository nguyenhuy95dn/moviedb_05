<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="@dimen/dp3">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp3">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/image_item"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginStart="@dimen/dp10"
            android:layout_toEndOf="@+id/image_item"
            android:layout_toRightOf="@+id/image_item"
            android:maxLines="1"
            android:text="@string/title_movie"/>

        <TextView
            android:id="@+id/text_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text_title"
            android:layout_alignStart="@+id/text_title"
            android:layout_below="@+id/text_title"
            android:layout_marginTop="@dimen/dp22"
            android:text="@string/title_type"/>

        <TextView
            android:id="@+id/text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image_item"
            android:layout_alignLeft="@+id/text_type"
            android:layout_alignStart="@+id/text_type"
            android:text="@string/title_date"/>

        <ImageView
            android:id="@+id/image_item"
            android:layout_width="@dimen/dp120"
            android:layout_height="@dimen/dp90"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@drawable/bg_no_img"/>

        <FrameLayout
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp30"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true">

            <ImageButton
                android:id="@+id/button_white_star"
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/ic_white_star"
                />

            <ImageButton
                android:id="@+id/button_yellow_star"
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/ic_yellow_star"
                android:visibility="invisible"/>
        </FrameLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>